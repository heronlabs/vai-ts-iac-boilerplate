{
  "name": "my-project",
  "version": "0.0.1",
  "description": "Project created to serve as a boilerplate for iac projects.",
  "license": "MIT",
  "main": "index.ts",
  "scripts": {
    "compile": "rm -rf ./bin && tsc --project tsconfig.bin.json",
    "lint:check": "gts lint",
    "lint:fix": "gts fix",
    "test": "jest --runInBand --colors",
    "test:unit": "yarn test --config=tests/unit/jest.config.ts",
    "iac:prepare": "pulumi preview",
    "iac:up": "pulumi up",
    "iac:down": "pulumi destroy"
  },
  "devDependencies": {
    "@faker-js/faker": "6.1.2",
    "@jest/types": "27.5.1",
    "@types/jest": "26.0.23",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "7.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "gts": "^4.0.0",
    "jest": "27.2.3",
    "jest-junit": "12.3.0",
    "moq.ts": "7.3.4",
    "ts-jest": "27.0.5",
    "ts-node": "10.8.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@pulumi/aws": "^5.0.0",
    "@pulumi/awsx": "^0.40.0",
    "@pulumi/pulumi": "^3.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "prettier": "gts/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/gts/",
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "node/no-unpublished-import": 0,
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "@typescript-eslint/no-duplicate-imports": "error",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "max-classes-per-file": [
        "error",
        1
      ]
    },
    "ignorePatterns": [
      "node_modules/",
      "coverage*/",
      "bin/"
    ]
  }
}
